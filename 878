<body>
    <div class="container">
        <h1>Insaf, Will You Be My Valentine? ❤️</h1>
        <p>You make every day special!</p>
        <div class="buttons">
            <button id="yes" onclick="alert('Yay! See you on Valentine\'s Day! ❤️')">YES!</button>
            <button id="no" onmouseover="moveButton()">No</button>
        </div>
    </div>

    <script>
        function moveButton() {
            const btn = document.getElementById('no');
            const x = Math.random() * (window.innerWidth - btn.offsetWidth);
            const y = Math.random() * (window.innerHeight - btn.offsetHeight);
            btn.style.position = 'absolute';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }
    </script>
